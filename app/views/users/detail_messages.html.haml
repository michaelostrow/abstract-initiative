.span12
  %h3.smallheading.text-center Your Messages
  %ul.nav.nav-tabs#messages-tab-list
    %li.active
      %a.inbox-tab-link{:href => "#inbox", :'data-toggle'=> "tab"}
        Inbox
    %li
      %a.sent-tab-link{:href => "#sent", :'data-toggle'=> "tab"}
        Sent
    %li
      %a.compose-tab-link{:href => "#compose", :'data-toggle'=> "tab"}
        Compose

  .tab-content
    .tab-pane.fade.in#inbox{:class => 'active'}
      .well
        Inbox
    .tab-pane.fade#sent
      .well
        Sent
    .tab-pane.fade#compose
      .well
        Compose
        
= render "menus"
:javascript
  $(document).ready(function() {
  $('#messages-tab-list a.#{@messages_tab}-tab-link').tab('show');
  });
      
