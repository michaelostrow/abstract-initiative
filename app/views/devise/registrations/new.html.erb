<% title("New Company") %>

<h1>Join the club.</h1>
<h4>With a company account on GivAway, your promotions and contests will receive more users than ever before.</h4>

<%= simple_form_for(resource, :as => resource_name, :html => {:class => 'form-horizontal' }, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :required => true, :autofocus => true, :label => "Company Name" %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
    <hr/>
    <%= f.input :website, label: "Company webpage" %>
    <%= f.input :location, label: "Company location" %>
    <%= f.input :description, as: :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
