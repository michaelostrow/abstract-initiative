%div.navbar_login
  = form_for("user", :url => new_user_session_path, :html => {:class => "navbar-form navbar-right" }) do |f|
    .form-group
      = f.text_field :email, :autofocus => true, :style => "font-size:12px;"
    .form-group
      = f.password_field :password, :style => "font-size:12px;"
    .form-group
      = f.submit "Sign in", :class => 'btn btn-primary'
    %br{:style=>"clear:both;"}
    = link_to "Forgot your password?", new_user_password_path, :class => "password_forgot navbar-right", :style => "position:relative;right:70px;"

