-content_for(:title, "Welcome to Abstract Initiative")

.row-fluid
  .span7
    %div{:style => "padding-top:4em;padding-left:10%;"}
      %h3 Share your work. See what other artists are up to. Connect with a growing community.

      %h2{:style => "text-align:center;"} That's our Abstract Initiative.

      %div{:style => "text-align:center;"}
        =link_to "Learn More", about_path
        |
        =link_to "Feedback", contact_path
    
  .span5
    %h1
      Sign Up
      %small &nbsp; It's really this easy!
      %hr/
    = simple_form_for("user", :url => user_registration_path, :html => {:class => 'form-horizontal' }) do |f|
      = f.error_notification
      = f.input :name, :autofocus => true
      = f.input :email, :required => true
      = f.input :password, :required => true
      = f.input :password_confirmation, :required => true
      = f.button :submit, 'Sign up!', :class => 'btn-inverse pull-right', :style => "position:relative;right:56px;"


